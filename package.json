{
  "name": "enterprise-it-asset-manager",
  "version": "1.0.0",
  "description": "Professional Local-First ERP for IT Asset Management",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:ui\" \"npm run dev:electron\"",
    "dev:ui": "vite",
    "dev:electron": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
    "build": "npx prisma generate && tsc -p electron/tsconfig.json && vite build && electron-builder",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "electron",
    "react",
    "erp",
    "sqlite"
  ],
  "author": "IT Admin",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "exceljs": "^4.4.0",
    "lucide-react": "^0.344.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.2",
    "recharts": "^3.7.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@rollup/rollup-win32-x64-msvc": "^4.57.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "prisma": "^6.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.vitbhopal.itmanager",
    "productName": "IT Asset Manager",
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "directories": {
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*"
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "prisma/schema.prisma",
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma"
      },
      {
        "from": "node_modules/@prisma/client",
        "to": "node_modules/@prisma/client"
      }
    ],
    "extraResources": [
      {
        "from": "prisma/dev.db",
        "to": "prisma/dev.db"
      },
      {
        "from": "node_modules/.prisma/client/query_engine-windows.dll.node",
        "to": "prisma/query_engine-windows.dll.node"
      }
    ]
  }
}
